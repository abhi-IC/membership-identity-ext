@using MembershipIdentityProvider.Code.Identity;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<MembershipUser> SignInManager
@inject UserManager<MembershipUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span class="text-dark">Hello @User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
        <form class="form-inline" method="post" action="/Account/Logout">
            <input type="hidden" name="returnUrl" value="/" />
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item"><a href="/Account/Register" class="nav-link text-dark">Register</a></li>
    <li class="nav-item"><a href="/Account/Login" class="nav-link text-dark">Login</a></li>
}
</ul>
